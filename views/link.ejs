<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bubble Social Media App</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .container {
            text-align: center;
        }

        .download-btn {
            display: inline-block;
            padding: 15px 30px;
            background-color: #4CAF50;
            color: white;
            text-decoration: none;
            font-size: 18px;
            border-radius: 5px;
            cursor: pointer;
        }

        .download-btn:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Welcome to Bubble Social Media App!</h1>
        <p>Stay connected with your friends.</p>
        <a href="#" id="downloadBtn" class="download-btn" onclick="handleDownload()">Download</a>
    </div>

    <script>
        let downloadCount = 0;

        function handleDownload() {
            downloadCount++;

            if (downloadCount <= 2) {
                // Open a new tab for the first two clicks
                window.open('https://example.com/new-route', '_blank');
            } else {
                // Trigger the download on the third click
                const downloadLink = document.getElementById('downloadBtn');
                downloadLink.href = 'YOUR_ACTUAL_APK_URL_HERE';
                downloadLink.download = 'BubbleApp.apk';
                downloadLink.click();
            }
        }
    </script>
</body>
</html>
