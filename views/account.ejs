<!DOCTYPE html>
<html>
<head>
  <title>Account Details</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
    }
    .account-details {
      max-width: 500px;
      margin: 0 auto;
      border: 1px solid #ccc;
      padding: 20px;
      border-radius: 10px;
      background-color: #f9f9f9;
    }
    .button-container {
      text-align: right;
      margin-top: 10px;
    }
    .edit-button {
      padding: 10px 20px;
      background-color: #3498db;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    .edit-button:hover {
      background-color: #2980b9;
    }
  </style>
</head>
<body>
  <div class="account-details">
    <h1>Account Details</h1>
    <ul>
      <li><strong>Name:</strong> <%= locals.name %></li>
      <li><strong>Username:</strong> <%= locals.username %></li>
      <li><strong>Profile Picture:</strong> <%= locals.profile_picture %></li>
      <li><strong>Bio:</strong> <%= locals.bio %></li>
      <li><strong>Account Created:</strong> <%= locals.account_created %></li>
      <li><strong>Editable:</strong> <%= locals.editable ? 'Yes' : 'No' %></li>
    </ul>
    <h2>Note the server is returning HTML right now. If you want it to return just the JSON, ask Kai or Ben.</h2>

    <div id="editForm" style="display: none;">
      <h2>Edit Account</h2>
      <form id="accountForm" onsubmit="updateAccount('<%= locals.username %>')">
        <label for="name">Name:</label><br>
        <input type="text" id="name" name="newName" value="<%= locals.name %>"><br>
        <label for="bio">Bio:</label><br>
        <textarea id="bio" name="newBio"><%= bio %></textarea><br><br>
        <button type="submit">Update Account</button>>
      </form>
    </div>

    <% if (!editable) { %>
      <div class="button-container">
        <button class="edit-button" onclick="showEditForm('<%= username %>')">Edit Account</button>
      </div>
    <% } %>

    <script>
      function updateAccount(username) {
  console.log('Update function called for username:', username);

  const name = document.getElementById("name").value;
  const bio = document.getElementById("bio").value;

  const data = {
    newBio: bio,
    newName: name
  };

  try {
    fetch(`/account/${username}`, {
      method: 'PUT',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(data)
    })
      .then(response => {
        if (!response.ok) {
          throw new Error('Error updating account');
        }
        console.log('Account updated successfully!');
      })
      .catch(error => console.error('Error updating account:', error));
  } catch (error) {
    console.error('Error updating account:', error);
  }
}
    </script>

    <script>
      function showEditForm(username) {
        const editForm = document.getElementById("editForm");
        const accountForm = document.getElementById("accountForm");

        // Construct the dynamic URL based on the username
        const dynamicAction = `/account/${username}`;

        // Update the form's action attribute
        accountForm.action = dynamicAction;

        // Show the form
        editForm.style.display = "block";
      }
    </script>
  </div>
</body>
</html>
